{
    "name": "vibeall",
    "displayName": "VibeAll",
    "description": "The Ultimate 'VibeAll' VS Code Extension for Vibe Coding",
    "version": "1.0.2",
    "publisher": "vibeall",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/vibeall"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "AI",
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vibeall-sidebar",
                    "title": "VibeAll",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "vibeall-sidebar": [
                {
                    "type": "webview",
                    "id": "vibeall.chatView",
                    "name": "Vibe Chat",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "vibeall.open",
                "title": "VibeAll: Open Chat"
            },
            {
                "command": "vibeall.openSettings",
                "title": "VibeAll: Open Settings"
            },
            {
                "command": "vibeall.clearChat",
                "title": "VibeAll: Clear Chat"
            },
            {
                "command": "vibeall.indexCodebase",
                "title": "VibeAll: Index Codebase"
            },
            {
                "command": "vibeall.toggleAutocomplete",
                "title": "VibeAll: Toggle Autocomplete"
            }
        ],
        "configuration": {
            "title": "VibeAll",
            "properties": {
                "vibeall.autocomplete.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable inline autocomplete"
                },
                "vibeall.autocomplete.debounceMs": {
                    "type": "number",
                    "default": 300,
                    "description": "Debounce delay for autocomplete (ms)"
                },
                "vibeall.indexing.autoIndex": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically index codebase on startup"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "web": "webpack serve --config webpack.web.js",
        "dev": "npm run web",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext .ts,.tsx",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "20.x",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-electron": "^2.3.8",
        "css-loader": "^6.8.1",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.37.5",
        "html-webpack-plugin": "^5.6.5",
        "style-loader": "^3.3.3",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.2"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tree-sitter": "^0.21.1",
        "tree-sitter-javascript": "^0.21.4",
        "tree-sitter-typescript": "^0.21.2"
    }
}